# Environment Variables Template
# This file shows all available environment variables with example values
# 
# USAGE:
# 1. Common variables go in .env (shared across all environments)
# 2. Development overrides go in .env.local
# 3. Production overrides go in .env.production
# 4. Never commit files with real credentials!

# =============================================================================
# COMMON VARIABLES (typically go in .env)
# =============================================================================

# ESLint Configuration
DISABLE_ESLINT_PLUGIN=true
ESLINT_NO_DEV_ERRORS=true

# Performance optimizations
REACT_APP_ENABLE_PROFILING=false
REACT_APP_ENABLE_ANALYTICS=false

# App Configuration
REACT_APP_NAME=Collab Messaging
REACT_APP_VERSION=1.0.0

# =============================================================================
# ENVIRONMENT-SPECIFIC VARIABLES (go in .env.local or .env.production)
# =============================================================================

# API URLs
# Development:
# REACT_APP_API_URL=http://localhost:8090
# REACT_APP_WS_URL=ws://localhost:8090
# Production:
# REACT_APP_API_URL=https://your-api.run.app
# REACT_APP_WS_URL=wss://your-api.run.app
REACT_APP_API_URL=your_api_url_here
REACT_APP_WS_URL=your_websocket_url_here

# Legacy environment variables (for backward compatibility)
API_BASE_URL=your_api_url_here
WEBSOCKET_URL=your_websocket_url_here

# Environment settings
# Development: development
# Production: production
NODE_ENV=development

# Build settings
# Development: true
# Production: false
GENERATE_SOURCEMAP=true

# React settings (development only)
FAST_REFRESH=true

# Performance settings
# Development: true for debugging
# Production: false for performance
REACT_APP_ENABLE_PROFILING=false
# Development: false
# Production: true for tracking
REACT_APP_ENABLE_ANALYTICS=false

# Production Performance Optimizations (production only)
# REACT_APP_DISABLE_DEV_TOOLS=true
# REACT_APP_ENABLE_COMPRESSION=true
# REACT_APP_ENABLE_SERVICE_WORKER=true
# INLINE_RUNTIME_CHUNK=false
# IMAGE_INLINE_SIZE_LIMIT=10000
# ANALYZE=false

# NOTE: R2 credentials are no longer needed in frontend
# File operations are handled through backend API:
# - Upload: POST /api/files/upload
# - Download: GET /api/files/download/{fileId}
# - View: GET /api/files/view/{fileId}